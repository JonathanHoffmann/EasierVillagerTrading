{
    "schemaVersion": 1,
    "id": "easiervillagertrading",
    "version": "${version}",
    "environment": "client",
    "entrypoints": {
        "client": [ "de.guntram.mcmod.easiervillagertrading.EasierVillagerTrading" ],
        "modmenu": [ "de.guntram.mcmod.easiervillagertrading.MMConfigurationHandler" ]
    },
    "custom": {
        "modupdater": {
            "strategy": "json",
            "url": "https://raw.githubusercontent.com/gbl/ModVersionInfo/master/EasierVillagerTrading.json"
        }
    },
    "mixins": [
        "mixins.easiervillagertrading.json"
    ],
    "depends": {
        "fabric-api": "*",
        "gbfabrictools": ">=1.4+1.20"
    },
    "recommends": {
      "modmenu" : "*"
    },
    "name": "EasierVillagerTrading",
    "description": "One-click trading with villagers\n\nIn 1.14, this mod doesn't bring it's own GUI anymore; instead, it modifies the behaviour of the standard GUI.\n\n- Click to execute a trade once (as opposed to just selecting it)\n- Shift-Click to execute a trade as often as possible\n- Ctrl-Click to prepare the trade (just like a normal click in the original GUI )",
    "icon": "icon.png",
    "authors": [ "Giselbaer" ],
    "contact": {
        "homepage": "https://www.curseforge.com/minecraft/mc-mods/easiervillagertrading",
        "sources": "https://github.com/gbl/EasierVillagerTrading",
        "issues": "https://github.com/gbl/EasierVillagerTrading/issues"
    }

}
